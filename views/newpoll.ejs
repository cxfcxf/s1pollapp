<%- include header %>

<script type="text/javascript">
    $(document).ready(function() {
        $("#myTags").tagit({
          allowSpaces: true,
          singleField: true,
          placeholderText: "请输入标签",
          maxTags: 8
        });
    });
</script>

<div class="page-header">
  <h1>新增投票</h1>
</div>

<form role="form" method="post">
  <div class="form-group">
    <label>问题</label>
    <input type="text" class="form-control" placeholder="问题" name="question">
  </div>
  <div class="form-group">
    <label>选择</label>
    <textarea class="form-control" rows="10" placeholder="请填入投票选项, 每行一项" name="choices"></textarea>
    </div>
  <div class="form-group">
    <label>标签</label>
    <input type="text" id="myTags" name="tags"/>

  </div>

<br />

<p><hr></p>
<div class="row">
	<div class="col-xs-6">
        <a href="/" class="btn btn-default" role="button"><span class="glyphicon glyphicon-arrow-left"></span>返回首页</a>
    </div>
    <div class="col-xs-6">
        <button class="btn btn-primary pull-right" type="submit">发起投票 &raquo;</button>
    </div>
</div>

</form>


<%- include footer %>